<h1 style='margin-left: 1%;'>Upload photos</h1>

<div style="margin-left: 1%; padding: 2%; width: 50%; position: relative; border: solid #6c757d 0.01rem;">
    <input id='file' type="file" name="file" accept="image/*" onchange="uploadPhoto(this);"/><br><br>
</div>

<div class="card" style="width: 50%; margin-left: 1%; position: relative;">
    <img id="newPhoto" src="#" class="card-img-top photo-hidden"/>
    <div class="card-body">
        <input id='caption' name='caption' type="text" placeholder="Enter your caption for photo" class="form-control">
        <p></p>
        <button type="submit" onclick="createPhoto()" id="submit" class="btn btn-outline-info">Publish Photo</button>
        <button type="button"  class="btn btn-outline-dark" onclick="history.back();">Back</button>
    </div>
</div>

{{#if error}}
    <div class="alert alert-danger" style="width: 50%; margin-left: 1%; position: relative;" role="alert">
        {{error}}
    </div>
{{/if}}
