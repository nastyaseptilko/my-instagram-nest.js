<form method='POST' action='/login'>
    <div class='loginRegisterForm'>
        <h1 >Login:</h1>

        <div class="form-group"  >
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email, please" aria-describedby="emailHelp" required>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" id="password" name="password" placeholder="Enter your password, please" class="form-control" required>
        </div>

        {{#if  error}}
            <div class="error">
                <div class="alert alert-danger" role="alert">
                    {{error}}
                </div>
            </div>
        {{/if}}

        <div class="alertError">
        </div>

        {{#if message}}
            <p class="alert alert-danger" role="alert">{{ message }}</p>
        {{/if}}
<!--        <span class="mdl-textfield__error">{{ message }}</span>-->
        <button type="submit" class="btn btn-outline-info" >Login</button>
        <button type="button" style="margin-left: 15px" class="btn btn-outline-dark" onclick="history.back();">Back</button>
    </div>
</form>

<br>
<a href="/auth/google" class="btn btn-danger" style="margin-left: 28rem;"><span class="fa fa-google"></span> SignIn with Google</a>

